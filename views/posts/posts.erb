
<div class="container">
    <div class="text-center">
<h1>게시판 입니다.</h1>
</div>
<div class="text-right my-3">
<a class="btn btn-primary" href="/posts/new" role="button">글 쓰러가기</a>
</div>
<table class="table">
    <thead>
        <th scope="col">id</th>
        <th scope="col">제목</th>
        <th scope="col">내용</th>
        <th scope="col">작성일자
    </th><th scope="col">보기</th>
    </thead>
    <tbody>
       <% @posts.reverse.each do |p| %>
       <tr>
      <th scope="row"><%= p.id %></th>
      <td><%= p.title%></td>
      <td><%= p.body %></td>
      <td><%= p.created_at %></td>
      <td><a href="posts/<%= p.id %>">링크</a></td>
    </tr>
    <% end %>
  </tbody>
    
</table>
</div>